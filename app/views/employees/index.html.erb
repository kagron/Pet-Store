<div class="container">
<h1>Employees</h1>

<table class=table "table-striped">
  <thead>
    <tr>
      <th>Emp no</th>
      <th>Birth date</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Gender</th>
      <th>Hire date</th>
      <th>Titles</th>
      <th>Store</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.emp_no %></td>
        <td><%= employee.birth_date %></td>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.gender %></td>
        <td><%= employee.hire_date %></td>
        <td><%= employee.titles %></td>
        <td><%= employee.store_id %></td>
        <td><%= link_to 'Show', employee, class: 'btn btn-primary', style: 'color: white' %></td>
        <% if user_signed_in? %>
        <% if current_user.admin %>
        <td><%= link_to 'Edit', edit_employee_path(employee), class: 'btn btn-warning', style: 'color: white' %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger', style: 'color: white' %></td>
        <% end %>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Employee', new_employee_path, class: 'btn btn-default' %>
</div>
