<div class="container">
<h1>Foods</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Expiration</th>
      <th>Data</th>
      <th>Price</th>
      <th>Foodtype</th>
      <th>Quantity</th>
      <th>Store</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.expirationDate %></td>
        <td><%= food.data %></td>
        <td><%= food.price %></td>
        <td><%= food.foodType %></td>
        <td><%= food.quantity %></td>
        <td><%= food.store_id %></td>
        <td><%= link_to 'Show', food, class: 'btn btn-primary', style: 'color: white' %></td>
        <td><%= link_to 'Edit', edit_food_path(food), class: 'btn btn-warning', style: 'color: white' %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger', style: 'color: white' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Food', new_food_path, class: 'btn btn-default' %>
</div>
