<style>
    .jumbotron {
        margin-top: 5%;
        background-color: white;
    }


</style>


<div class="jumbotron col-10 offset-1">
    <div class="row col-12">
    <div class="text-center">
        <h1 class="col-4 offset-4">Reports</h1>
    </div>
    <br>
    <div class="row">

        <div class="col-md-4 col-md-offset-3" style="height:500px; width:600px;">
            <canvas id="petsPerMonth" width="400" height="400"></canvas>
            <canvas id="itemsPerMonth" width="400" height="400"></canvas>
            <canvas id="toysPerMonth" width="400" height="400"></canvas>
        </div>


    <div class="row col-12">
      <div class="text-center">
        <%= link_to "Back", root_path, :class=>"btn col-1 offset-9"%>
    </div>
</div>


<script>
var ctx = document.getElementById('petsPerMonth').getContext('2d');
var nums = [4,2,3,4,2,1,4,2,2,3,4,7]
//<%= @monthNums.to_json.html_safe %>
var chart = new Chart(ctx, {
    // The type of chart we want to create
    type: 'bar',

    // The data for our dataset
    data: {
        labels: ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"],
        datasets: [{
            label: "Pets",
            backgroundColor: 'rgb(255, 99, 132)',
            borderColor: 'rgb(255, 99, 132)',
            data: nums
        }]
    },

    // Configuration options go here
    options: {
        title:{
            display:true,
            text:'Pets Per Month'
        },
        scales: {
        yAxes: [{
            ticks: {
                beginAtZero: true
            }
        }]
    }
    }
});
 ctx = document.getElementById('itemsPerMonth').getContext('2d');
 nums = [44,32,36,64,32,42,54,52,42,63,64,57]
//<%= @monthNums.to_json.html_safe %>
